<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:fitsSystemWindows="true">

    <View
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@mipmap/ic_back">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/recording_finished"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="16dp"
            android:paddingEnd="20dp"
            android:paddingBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_d4e9ff_to_ffffff_r16"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:id="@+id/stage_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HypertensionÂ·Stage 1"
                    android:textColor="@color/c_0b0a0f"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/stage_tips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/state_tips"
                    android:textColor="@color/c_0b0a0f"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/level_view_1"
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        android:layout_weight="1"
                        android:background="#7DFF58" />

                    <View
                        android:id="@+id/level_view_2"
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        android:layout_marginStart="2dp"
                        android:layout_weight="1"
                        android:background="#5294FF" />

                    <View
                        android:id="@+id/level_view_3"
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        android:layout_marginStart="2dp"
                        android:layout_weight="1"
                        android:background="#FFE14C" />

                    <View
                        android:id="@+id/level_view_4"
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        android:layout_marginStart="2dp"
                        android:layout_weight="1"
                        android:background="#F3A336" />

                    <View
                        android:id="@+id/level_view_5"
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        android:layout_marginStart="2dp"
                        android:layout_weight="1"
                        android:background="#FF7B2D" />

                    <View
                        android:id="@+id/level_view_6"
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        android:layout_marginStart="2dp"
                        android:layout_weight="1"
                        android:background="#FA2F23" />
                </LinearLayout>

                <TextView
                    android:id="@+id/stage_introduce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Systolic blood pressure90, diastolic blood pressure 75"
                    android:textColor="@color/c_0b0a0f"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_ffffff_r16"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:id="@+id/item_condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Default"
                    android:textColor="@color/c_0b0a0f"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="2023-07-13   17:01"
                    android:textColor="@color/c_cbcccf"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shape_f5f7fa_r12"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">

                        <TextView
                            android:id="@+id/tv_systolic_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Systolic"
                            android:textColor="@color/c_282828"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="mmHg"
                            android:textColor="#CBCCCF"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_systolic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:text="100"
                            android:textColor="@color/c_0b0a0f"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="14dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_f5f7fa_r12"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">


                        <TextView
                            android:id="@+id/tv_diastolic_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Diastolic"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="mmHg"
                            android:textColor="#CBCCCF"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_diastolic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:text="78"
                            android:textColor="@color/c_0b0a0f"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shape_f5f7fa_r12"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">

                        <TextView
                            android:id="@+id/tv_pulse_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pulse"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BPM"
                            android:textColor="#CBCCCF"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_pulse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:text="20"
                            android:textColor="@color/c_0b0a0f"
                            android:textSize="24sp"
                            android:textStyle="bold" />


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_ffffff_r16"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/article_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Default"
                    android:textColor="@color/c_0b0a0f"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btn_read_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/shape_838b97_r16"
                    android:paddingStart="24dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="5dp"
                    android:text="@string/read"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/c_f2f5f4"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/article_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Default"
                    android:textColor="@color/c_0b0a0f"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btn_read_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/shape_838b97_r16"
                    android:paddingStart="24dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="5dp"
                    android:text="@string/read"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottombar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/btn_save"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/shape_6ca3ff_to_257bff_r24"
                    android:gravity="center"
                    android:paddingStart="36dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="36dp"
                    android:paddingBottom="12dp"
                    android:text="@string/home"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>